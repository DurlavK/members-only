extends layout

block content
  div(class='max-w-7xl mx-auto')
    div(class='flex justify-between mt-1 items-center')
      div 
        h1(class='text-2xl') Members-Only
      div
        a(href='/user/logout' class='border rounded-lg py-1 px-2 bg-red-500 shadow-lg hover:bg-gray-500 text-white' ) Log Out
        a(href=user.url+'/update' class='border rounded-lg py-1 px-2 bg-blue-500 shadow-lg hover:bg-gray-500') update user
    div(class='flex flex-col')
      each message in messages
        div(class='bg-gray-100 p-2 mt-2')
          p(class='') #{message.title}
          p(class='text-sm') #{message.body}
          if (user.membership!=false || user.admin!=false)
            p(class='text-sm') Created By- #{message.creator.fullname}
            p(class='text-sm') Created At- #{message.timestamp}
          if user.admin!=false 
            a(href=message.url+'/delete' method='POST') Delete
