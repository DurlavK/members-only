extends layout

block content
  div(class='max-w-7xl bg-gray-100 mx-auto')
    h1(class='text-center pt-4') Sign Up
    div(class='max-w-4xl mx-auto p-4')
      form(method='POST' action='')
        div(class='flex flex-col')
          
          label(for='username' class='my-2 px-1') Username:
          input#firstName(type='text' placeholder='username' name='username' required='true' class='py-2 px-1 rounded-sm')

          label(for='password' class='my-2 px-1') Password: 
          input#password(type='password' name='password' required='true' class='py-2 px-1 rounded-sm')
        button(type='submit' class='px-2 py-1 bg-blue-400 rounded-md mt-4') Login
    if errors
      ul
        for error in errors
          li!= error.msg